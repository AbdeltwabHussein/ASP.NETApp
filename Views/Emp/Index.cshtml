<form asp-action="Index" asp-controller="Emp" class="form-group">

    <div class="row">
        <div class="col-lg-10">
            <input type="text" placeholder="@SharedLocalizer["sen"]" class="form-control" name="SearchValue" />
        </div>
        <div class="col-lg-2">
            <input type="submit" value="@SharedLocalizer["Search"]" class="btn btn-success" />
        </div>
    </div>



</form>


<div class="container-fluid">
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>@SharedLocalizer["wte"]</h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="javascript:void(0);">Action</a></li>
                                <li><a href="javascript:void(0);">Another action</a></li>
                                <li><a href="javascript:void(0);">Something else here</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover js-basic-example dataTable text-center font-weight-bold">
                            <thead>
                                <tr class="thead-dark">
                                    <th>@SharedLocalizer["Name"]</th>
                                    <th>@SharedLocalizer["Email"]</th>
                                    <th>@SharedLocalizer["HireDate"]</th>
                                    <th>CV</th>
                                    <th>Photo</th>
                                    <th>@SharedLocalizer["DepartmentName"]</th>

                                    <th>@SharedLocalizer["Updata"]</th>
                                    <th>@SharedLocalizer["Remove"]</th>
                                    <th>@SharedLocalizer["Details"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.EmployeeName</td>
                                        <td>@item.Email</td>
                                        <td>@item.HireDate.ToShortDateString()</td>
                                        <td><a href="~/files/Docs/@item.CV">Download CV</a></td>
                                        <td><img src="~/files/Photos/@item.Photo" height="50" width="50" /></td>
                                        <td>@item.Department.DepartmentName</td>

                                        <td><a asp-action="Edit" asp-controller="Emp" class="btn btn-success" asp-route-Id="@item.Id">@SharedLocalizer["Updata"]</a></td>
                                        <td><a asp-action="Delete" asp-controller="Emp" class="btn btn-danger" asp-route-Id="@item.Id">@SharedLocalizer["Delete"]</a></td>
                                        <td><a asp-action="Details" asp-controller="Emp" class="btn btn-info" asp-route-Id="@item.Id">@SharedLocalizer["Details"]</a></td>
                                    </tr>
                                }

                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





