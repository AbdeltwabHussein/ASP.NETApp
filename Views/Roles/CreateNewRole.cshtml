@model webApp00.BL.Model.CreateRoleVM

@{
    ViewBag.Title = "Create Role";
}

<br />
<br />
<a asp-controller="Roles" asp-action="Index" class="btn btn-pink">Back to Roles</a>
<br />
<br />


<form asp-controller="Roles" asp-action="CreateNewRole">
    <div class="msg">Create New Role</div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="input-group">
        <span class="input-group-addon">
            <i class="material-icons">lock</i>
        </span>
        <div class="form-line">
            <input asp-for="RoleName" class="form-control" placeholder="Enter Role Name" style="padding-left:20px">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <center>
        <input type="submit" class="btn bg-primary waves-effect" value="Create" />
        <input type="reset" class="btn bg-danger waves-effect" value="Cancel" />
    </center>

</form>
@section ClientValidation{
    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
